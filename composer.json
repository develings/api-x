{
    "name": "develings/api-x",
    "description": "Create a full-fledged API using a simple json file.",
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "hashids/hashids": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "ApiX\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^1.20"
    },
    "extra": {
        "laravel": {
            "providers": [
                "ApiX\\ApiXServiceProvider"
            ]
        }
    }
}
