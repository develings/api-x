{
    "name": "API",
    "version": "1.0",
    "description": "-",
    "endpoint": "/api/v1.0/",
    "authentication": "token:user,api_key",
    "authentication_guest": "guest",
    "events": true,
    "hash_salt": "env:APP_HASH_SALT",
    "key": "env:APP_KEY",
    "db": {
        "driver": "mysql",
        "prefix": ""
    },
    "servers": [
        { "url": "http://localhost" },
        { "url": "https://example.com" }
    ],
    "api": [
        {
            "name": "user",
            "timestamps": true,
            "soft_deletes": true,
            "fields": {
                "id": "id",
                "email": "email|unique",
                "username": "string|unique|nullable",
                "password": "password|nullable|hash",
                "api_key": "string|nullable|default:alphanumeric,32|unique|index",
                "last_active_at": "datetime|nullable"
            },
            "index": {
                "authentication": "guest"
            },
            "create": {
                "authentication": "none"
            }
        }
    ]
}
